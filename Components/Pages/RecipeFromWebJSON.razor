@page "/recipefromwebjson"
@using System
@using RecipeApp.Models
@using RecipeApp.Services
@inject RecipesFromWebService WebService

<PageTitle>Recipes from Web API</PageTitle>

<h1>Recipes from Web API</h1>

<p><strong>These recipes are fetched from the app's own structured /api/recipes endpoint (mocking an external web service).</strong></p>

@if (!WebService.GetAllRecipes().Any())
{
    <p><em>No recipes loaded (fetch may have failed).</em></p>
}
else
{
    <ul>
        @foreach (var recipe in WebService.GetAllRecipes())
        {
            <li>
                <NavLink href="@($"/recipedetail?title={Uri.EscapeDataString(recipe.Title)}&source=web")">
                    @recipe.Title (serves @recipe.Yield)
                </NavLink>
            </li>
        }
    </ul>
}

<NavLink href="/">← Back to Home</NavLink>