@page "/recipefromwebjson"
@using System
@using System.Text.Json
@using RecipeApp.Models
@inject HttpClient Http

<PageTitle>Recipes from Web API</PageTitle>

<h1>Recipes from Web API</h1>

<p><strong>These recipes are fetched from the app's own /api/recipes endpoint (mocking an external web service).</strong></p>

@if (Recipes == null)
{
    <p><em>Loading...</em></p>
}
else if (!Recipes.Any())
{
    <p><em>No recipes loaded (fetch failed or empty).</em></p>
}
else
{
    <ul>
        @foreach (var recipe in Recipes)
        {
            <li>
                <NavLink href="@($"/recipedetail?title={Uri.EscapeDataString(recipe.Title)}&source=web")">
                    @recipe.Title (serves @recipe.Yield)
                </NavLink>
            </li>
        }
    </ul>
}

<NavLink href="/">← Back to Home</NavLink>

@code {
    private List<Recipe>? Recipes;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var json = await Http.GetStringAsync("api/recipes");
            var options = new JsonSerializerOptions { PropertyNameCaseInsensitive = true };
            Recipes = JsonSerializer.Deserialize<List<Recipe>>(json, options) ?? new();
        }
        catch
        {
            Recipes = new();
        }
    }
}